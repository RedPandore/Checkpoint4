{% block competence %}
    <section class="competence" id="competence" data-aos="fade-right" data-aos-delay="100">

        <div class="row">
            <div class="col-12 center-col margin-40px-bottom sm-margin-40px-bottom xs-margin-30px-bottom text-center">
                <h2 class="title">Mes compétences</h2>
            </div>
        </div>
        <div class="col-12 center-col mb-2 text-center">
            <h3 class="subtitle">
                De dév'
            </h3>
        </div>
        <div class="row d-flex justify-content-around mt-4">
            {% for competence in competences %}
                {% if competence.other == false %}
                    <div class="col-4 col-md-2 m-2 my-4 d-flex justify-content-center align-items-center p-2 logoComp">
                        <p class="m-auto">{{ competence.nom }}</p>
                        <i class="{{ competence.logo}} logo m-auto"></i>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-12 center-col text-center mb-2">
            <h3 class="subtitle m-3">
                Mes autres compétences
            </h3>
        </div>
        <div class="row d-flex justify-content-around mt-4">
            {% for competence in competences %}
                {% if competence.other == true %}
                    <div class="col-4 col-md-2 m-2 my-4 d-flex justify-content-between align-items-center p-2 logoComp">
                        <p class="m-auto">{{ competence.nom }}</p>
                        <i class="{{ competence.logo}} logo m-auto"></i>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
