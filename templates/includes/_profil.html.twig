{% block profil %}
    <section class="profile" id="profile">
        <div class="container">
            <div class="d-flex justify-content-center">
                <h1 class="align-center title ">
                    Profil
                </h1>
            </div>
            <div class="row">
                <div class="col-sm-offset-3 col-sm-3">
                    <div class="d-flex flex-wrap justify-content-center">
                        <img src="{{ myData.avatar_url }}" class="rounded-circle mx-4" width="200" height="200"/>
                        <div>
                            <h4>{{ myData.name }}</h4>
                            <p>
                                {{ myData.public_repos }}
                                Repos |
                                {{ myData.public_gists }}
                                Gists
                            </p>
                        </div>
                        <div>
                            <a href="{{ myData.html_url }}" class="btn btn-outline-primary btn-sm m-1 p-3 fab fa-github btn-profil">
                                Github</a>
                            <a href="{{ myData.html_url }}" class="btn btn-outline-primary btn-sm m-1 p-3 fab fa-linkedin btn-profil">
                                Linkedin</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-9">
                    {{ description|raw }}
                    <!-- TO DO ADD PROGRESS BAR -->
                </div>
            </div>
        </div>
    </section>

{% endblock %}
