{% block projets %}
    <section class="projets" data-aos="fade-right" data-aos-delay="100">
        <div class="row">
            <div class="col-12 center-col margin-40px-bottom sm-margin-40px-bottom xs-margin-30px-bottom text-center">
                <h2 class="title m-4">Mes réalisations</h2>
            </div>
        </div>
        <div class="row">
            {% for projet in projets %}
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <figure class="imghvr-blur m-4">
                        <img class="img-responsive" src="{{ asset('uploads/' ~ (projet.image) ) }}">
                        <figcaption>
                            <h2 class="ih-fade-down ih-delay-sm ">
                                {{ projet.name }}
                            </h2>
                            <p class="ih-fade-up ih-delay-lg ">
                                {{ projet.description }}
                            </p>
                            <a class="info" href="{{ projet.url }}"></a>
                        </figcaption>
                    </figure>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12 center-col margin-40px-bottom sm-margin-40px-bottom xs-margin-30px-bottom text-center">
                <h2 class="title m-4">Mes projets github</h2>
            </div>
        </div>
        <div class="row">
            {% for repo in repos %}
                <div class="col-lg-3 col-md-3">
                    <a class="outline-card" href="{{ repo.html_url }}">
                        <div class="card mb-3" style="min-height: 200px;">
                            <div class="row no-gutters">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ repo.name }}</h5>
                                        <p class="card-text">
                                        {% if repo.description %}
                                            {{  repo.description }}
                                        {% else %}
                                            <span class="text-muted">Aucune description</span>
                                        {% endif %}
                                        </p>
                                        <div class="card-meta d-flex justify-content-between align-bottom">
                                            <div class="card-author">
                                                <img src="{{ repo.owner.avatar_url }}" alt="Avatar du propriétaire du repo" class="rounded-circle" width="60">
                                            </div>
                                            <div class="d-flex align-bottom">
                                                <p class="my-auto language">
                                                    {{ repo.language}}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
