{% block projets %}
    <section class="projets" id="projet" data-aos="fade-up" data-aos-delay="100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 center-col text-center">
                    <h2 class="title">Mes réalisations</h2>
                </div>
            </div>
            <div class="row">
                {% for projet in projets %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" data-aos="fade-up" data-aos-delay="{{ loop.index }}00">
                        <figure class="imghvr-blur box-projet mx-4 mb-0">
                            <img class="img-responsive" src="{{ asset('uploads/' ~ (projet.image) ) }}">
                            <figcaption class="bg-dark">
                                <h2 class="ih-fade-down ih-delay-sm ">
                                    {{ projet.name }}
                                </h2>
                                <p class="ih-fade-up ih-delay-lg ">
                                    {{ projet.description }}
                                </p>
                                <a class="info" href="{{ projet.url }}"></a>
                            </figcaption>
                        </figure>
                        <h4 class="mb-4 mt-0 mx-auto p-1 text-center nom-projet">
                            {{ projet.name }}
                        </h4>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-12 center-col text-center">
                    <h2 class="title">Mes projets github</h2>
                </div>
            </div>
            <div class="row">
                {% for repo in repos %}
                    <div class="col-lg-3 col-md-3" data-aos="fade-up" data-aos-delay="{{ loop.index }}00">
                        <a class="outline-card" href="{{ repo.html_url }}">
                            <div class="card mb-3" style="min-height: 200px;">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ repo.name }}</h5>
                                            <p class="card-text">
                                                {% if repo.description %}
                                                    {{  repo.description }}
                                                {% else %}
                                                    <span class="text-muted">Aucune description</span>
                                                {% endif %}
                                            </p>
                                            <div class="card-meta d-flex justify-content-between align-bottom">
                                                <div class="card-author">
                                                    <img src="{{ repo.owner.avatar_url }}" alt="Avatar du propriétaire du repo" class="rounded-circle" width="60">
                                                </div>
                                                <div class="d-flex align-bottom">
                                                    <p class="my-auto language">
                                                        {{ repo.language}}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
